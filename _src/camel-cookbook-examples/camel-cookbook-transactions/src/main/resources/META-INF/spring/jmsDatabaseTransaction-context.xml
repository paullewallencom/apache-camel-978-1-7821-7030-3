<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
           http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       ">

  <!-- jms config; non-transactional -->
  <import resource="embedded-jms-context.xml"/>

  <!--
  <bean id="jmsTransactionManager" class="org.springframework.jms.connection.JmsTransactionManager">
      <property name="connectionFactory" ref="connectionFactory"/>
  </bean>
  -->

  <bean id="jms" class="org.apache.activemq.camel.component.ActiveMQComponent">
    <property name="connectionFactory" ref="connectionFactory"/>
    <!--<property name="transactionManager" ref="jmsTransactionManager"/>-->
  </bean>

  <!-- database config; transactional -->
  <import resource="embedded-db-context.xml"/>

  <bean id="sql" class="org.apache.camel.component.sql.SqlComponent">
    <property name="dataSource" ref="auditDataSource"/>
  </bean>

  <!-- this is an implementation of PlatformTransactionManager, Camel will look it up when a route is marked as transacted -->
  <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
    <property name="dataSource" ref="auditDataSource"/>
  </bean>

  <bean id="PROPAGATION_REQUIRED" class="org.apache.camel.spring.spi.SpringTransactionPolicy">
    <property name="transactionManager" ref="transactionManager"/>
    <property name="propagationBehaviorName" value="PROPAGATION_REQUIRED"/>
  </bean>

  <camelContext xmlns="http://camel.apache.org/schema/spring">
    <route>
      <from uri="jms:inbound"/>
      <transacted/>
      <log message="Processing message: ${body}"/>
      <to uri="sql:insert into audit_log (message) values (:#message)"/>
      <to uri="jms:outbound"/>
      <!-- this send should not be/ is transacted, so the message should not be sent -->
      <to uri="mock:out"/>
    </route>
  </camelContext>

</beans>
