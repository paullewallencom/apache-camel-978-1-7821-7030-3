<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xmlns:cxf="http://camel.apache.org/schema/cxf"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd
        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       ">

  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"/>

  <cxf:cxfEndpoint id="paymentServiceProxy"
                   address="http://localhost:${port1}/paymentService"
                   serviceClass="org.camelcookbook.ws.payment_service.Payment"/>

  <cxf:cxfEndpoint id="paymentServiceBackend"
                   address="http://localhost:${port2}/paymentService"
                   serviceClass="org.camelcookbook.ws.payment_service.Payment"/>

  <camelContext xmlns="http://camel.apache.org/schema/spring">
    <errorHandler id="myErrorHandler"
                  type="DefaultErrorHandler">
      <redeliveryPolicy maximumRedeliveries="2"/>
    </errorHandler>

    <route id="wsProxy" errorHandlerRef="myErrorHandler">
      <from uri="cxf:bean:paymentServiceProxy?dataFormat=PAYLOAD"/>
      <to uri="log:wsProxyRequest?showAll=true&amp;multiline=true"/>
      <to uri="cxf:bean:paymentServiceBackend?dataFormat=PAYLOAD"/>
      <to uri="log:wsProxyResponse?showAll=true&amp;multiline=true"/>
    </route>
  </camelContext>

</beans>